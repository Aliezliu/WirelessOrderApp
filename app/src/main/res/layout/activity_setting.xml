<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F0FFFF"
    tools:context="com.softeem.orderapp.activity.SettingActivity">

    <TextView
        android:text=""
        android:textSize="70dp"
        android:textColor="#8B008B"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="21dp"
        android:id="@+id/editText4"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/setTai"
        android:layout_alignStart="@+id/setTai"
        android:hint="请输入IP地址..."/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/setTai"
        android:hint="设置台桌号..."
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/setPass"
        android:layout_alignStart="@+id/setPass" />

    <Button
        android:text="修改IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:id="@+id/button4"
        android:background="@drawable/btn_bottom_confirm_bg"/>

    <Button
        android:text="修改"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/btn_bottom_confirm_bg"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="25dp" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="输入修改的密码..."
        android:id="@+id/setPass"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp" />

    <Button
        android:text="设置"
        android:background="@drawable/btn_bottom_confirm_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignBottom="@+id/setTai"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_back_bg"
        android:id="@+id/button5" />

</RelativeLayout>
